function convertToCelsius() {
  const fahrenheitInput = document.getElementById('fahrenheit').value;
  if (fahrenheitInput !== '') {
    const celsius = (fahrenheitInput - 32) * (5 / 9);
    document.getElementById('celsius').value = celsius.toFixed(2);
  }
}

function convertToFahrenheit() {
  const celsiusInput = document.getElementById('celsius').value;
  if (celsiusInput !== '') {
    const fahrenheit = (celsiusInput * (9 / 5)) + 32;
    document.getElementById('fahrenheit').value = fahrenheit.toFixed(2);
  }
}
This simple temperature converter allows you to input a temperature in either Celsius or Fahrenheit and then convert it to the other unit when you press the corresponding button.





